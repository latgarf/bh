class Transaction(models.Model):
    uid = models.CharField(max_length=32, primary_key=True, default=bh_gen_uid)
    start_ts = models.DateTimeField(auto_now_add=True)
    last_modified = models.DateTimeField(auto_now=True)
    recipient_address = models.CharField(max_length=32)
    bh_address = models.CharField(max_length=32)
    expiry = models.DateTimeField(auto_now_add=True)
    amount = models.DecimalField(decimal_places=8, max_digits=12)
    usd_rate = models.DecimalField(decimal_places=2, max_digits=6)
    fee_btc = models.DecimalField(decimal_places=8, max_digits=12)
    fee_usd = models.DecimalField(decimal_places=2, max_digits=6)
    status = models.IntegerField()
    product_id = models.IntegerField()

    def __unicode__(self):
        return unicode(self.owner) + '\'s contract at ' + unicode(self.creation_date)

class ShareHolder(models.Model):
    shareholder_id = models.CharField(max_length=500, null=False, blank=False)
    shareholder_name = models.CharField(max_length=64, null=True, blank=True)
    shares = models.DecimalField(decimal_places=8, max_digits=12)
